{
  "version": 2,
  "builds": [
    { "src": "main.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/fetch_prices", "destination": "/main.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "main.py": {
      "maxDuration": 30
    }
  }
}
